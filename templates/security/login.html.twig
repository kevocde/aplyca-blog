{% extends 'base.html.twig' %}

{% block title %}Iniciar!{% endblock %}

{% block navbaritems %}
    <li class="nav-item"><a class="nav-link" href="{{ path('home') }}">Principal <span class="sr-only">(current)</span></a></li>
    <li class="nav-item"><a class="nav-link" href="{{ path('post_index') }}">Blog</a></li>
    <li class="nav-item"><a class="nav-link" href="{{ path('contact_new') }}">Contacto</a></li>
{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-8">
            <div class="card">
                <div class="card-header border-0"><h2 class="mb-2 text-center">Inicie sesión</h2></div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="row">
                            {% if error %}
                                <div class="col-12">
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                </div>
                            {% endif %}
                            {% if app.user %}
                                <div class="col-12">
                                    <div class="mb-3">
                                        Usted está loggeado como {{ app.user.username }}, <a href="{{ path('app_logout') }}">Salir</a>
                                    </div>
                                </div>
                            {% endif %}
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="inputEmail">Correo</label>
                                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="inputPassword">Password</label>
                                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-12 d-flex justify-content-center">
                                <button class="btn btn-lg btn-success" type="submit">Iniciar</button>
                            </div>
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-12 text-center pt-4">
                            <a href="{{ path('app_register') }}">¿No está registrado?, regístrese aquí</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
